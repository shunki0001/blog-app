<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <title>BLOG</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/send_url.js"></script>
</head>
<body>
    <%- include('header') %>
    <main>
        <div class="main-header">
            <h1>編集ページ</h1>
        </div>
        <a href="/new">新規作成</a>
        <ul class="list">
            <% articles.forEach((article) => { %>
                <li>
                    <% if (article.category === 'limited') { %>
                        <i>会員限定</i>
                    <% } %>
                    <h2><%= article.title %></h2>
                    <p><%= article.summary %></p>
                    <a href="/article/<%= article.id %>">続きを読む</a>
                    <a href="/editer/<%= article.id %>">編集</a>
                    <form action="/delete/<%= article.id %>" method="post">
                        <input type="submit" value="削除">
                    </form>
                </li>
            <% }) %>
        </ul>
    </main>
</body>
</html>